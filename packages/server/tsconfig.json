{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "dist",
    "paths": {
      "@*": ["./src/*"]
    },
    "target": "ES2017",
		"allowImportingTsExtensions": true
  },
  "ts-node": {
    "esm": true
  }
}
