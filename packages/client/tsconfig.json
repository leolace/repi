{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["@react-router/node", "vite/client", "./src/types/global"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "@*": ["./src/*"],
      "$*": ["./src/pages/*"],
      "common": ["../common/src"],
    },
    "target": "ES2022"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx",
    "../common"
  ],
  "exclude": ["node_modules"]
}
